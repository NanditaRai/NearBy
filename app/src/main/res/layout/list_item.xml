<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/black"
        android:id="@+id/layout_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameText"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="110dp"
            />

        <TextView
            android:id="@+id/locationText"
            android:textColor="@color/white"
            android:layout_below="@id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"/>

        <TextView
            android:id="@+id/phoneText"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_below="@+id/locationText"/>

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneText"
            android:layout_marginStart="110dp" />

        <ImageView
            android:id="@+id/urlImage"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="90dp"
            android:layout_below="@+id/ratingText"
            android:contentDescription="@string/rating_image"/>

        <TextView
            android:id="@+id/reviewCount"
            android:layout_toRightOf="@+id/urlImage"
            android:textColor="@color/white"
            android:layout_below="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/hotelImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:contentDescription="@string/hotel_image"/>

        <ToggleButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton_favorite"
            android:layout_alignParentEnd="true"
            android:focusable="false"
            android:background="@null"
            android:textOn=""
            android:textOff=""
            android:layout_marginEnd="3dp"
            android:contentDescription="@string/favorites" />

    </RelativeLayout>

    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/layout_item"
        android:background="@color/view_divider_color" />
</RelativeLayout>