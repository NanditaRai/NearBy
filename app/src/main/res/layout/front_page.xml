<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/restaurants"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="100dp"
            android:src="@drawable/restaurants"/>


        <ImageView
            android:id="@+id/cafe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/coffee"/>

        <ImageView
            android:id="@+id/bars"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bars"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/night_clubs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/nightclub"/>



        <ImageView
            android:id="@+id/theater"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/movies"/>


        <ImageView
            android:id="@+id/shopping"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/shopping"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/hospitals"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/hospital"/>



        <ImageView
            android:id="@+id/banks"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bank"/>


        <ImageView
            android:id="@+id/airports"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/airport"/>
    </LinearLayout>

</LinearLayout>